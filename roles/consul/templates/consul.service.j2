[Unit]
Description=Consul
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker rm %p
ExecStart=/usr/bin/docker run \
  --name %p \
  --hostname %p \
  --net=host \
  --pid=host \
  -v {{ consul_config_dir }}/handler-config.yml:/config/handler.yml:ro,Z \
  -v /usr/local/bin:/scripts:ro,Z \
  -v {{ consul_data_dir }}/data:/consul/data:rw,Z \
  -v {{ consul_config_dir }}/conf.d:/consul/config:Z \
  {{ consul_image }}:{{ consul_tag }} agent

ExecStop=/usr/bin/docker stop %p
ExecReload=/usr/bin/docker restart %p

[Install]
WantedBy=multi-user.target
